<html>

<head>

</head>

<body class="container">
    <h1>Upload</h1>
    <form action="/candidato/importar" enctype="multipart/form-data" method="post" enc>
        <fieldset>
            <div class="row">
                <div class="col">
                    <legend> Arquivo </legend>
                </div>
                <div class="col-6">
                    <input type="file" class="form-control" name="csv">
                </div>
                <div class="col">
                    <input type="submit" class="btn btn-primary" name="Enviar">
                </div>
            </div>
        </fieldset>
    </form>
    <br />

    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Cpf</th>
            </tr>
        </thead>
        <tbody>
            <% @candidatos.each do |candidato| %>
            <tr>
                <td><%= candidato.id %></td>
                <td><%= link_to candidato.txNomeParlamentar, candidato_path(candidato) %></td>
                <td><%= candidato.cpf %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

</body>

</html>